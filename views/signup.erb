<form method="POST" action="/user/signup">
    <input type="text" name="user[first_name]" placeholder="first name">
     <input type="text" name="user[last_name]" placeholder="last name">
     <input type="text" name="user[username]" placeholder="username">
     <input type="text" name="user[email]" placeholder="email">
     <input type="password" name="user[password]" placeholder="password">
     <label for="over_12">I am 13 or older</label>
     <input type="hidden" name="over_12" value="false">
     <input type="checkbox" name="over_12" value="true">
     <button type="submit">Sign Up!</button>
</form>
